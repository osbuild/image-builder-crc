{
  "filesystem": [
    {
      "min_size": 1073741824,
      "mountpoint": "/home"
    },
    {
      "min_size": 1073741824,
      "mountpoint": "/tmp"
    },
    {
      "min_size": 3221225472,
      "mountpoint": "/var"
    },
    {
      "min_size": 1073741824,
      "mountpoint": "/var/log"
    },
    {
      "min_size": 10737418240,
      "mountpoint": "/var/log/audit"
    },
    {
      "min_size": 1073741824,
      "mountpoint": "/var/tmp"
    }
  ],
  "fips": {
    "enabled": true
  },
  "kernel": {
    "append": "audit_backlog_limit=8192 audit=1 page_poison=1 vsyscall=none pti=on init_on_free=1"
  },
  "openscap": {
    "profile_description": "This is a profile based on what is expected in the RHEL 10 STIG.: It is not based on the DISA STIG for RHEL 10, because it was not available at time of the release.  In addition to being applicable to Red Hat Enterprise Linux 10, this configuration baseline is applicable to the operating system tier of Red Hat technologies that are based on Red Hat Enterprise Linux 10.",
    "profile_id": "xccdf_org.ssgproject.content_profile_stig_gui",
    "profile_name": "Red Hat STIG for Red Hat Enterprise Linux 10"
  },
  "packages": [
    "aide",
    "crypto-policies",
    "sudo",
    "gnutls-utils",
    "nss-tools",
    "subscription-manager",
    "opensc",
    "pcsc-lite-ccid",
    "pcsc-lite",
    "pkcs11-provider",
    "rsyslog-gnutls",
    "rsyslog",
    "firewalld",
    "libreswan",
    "policycoreutils-python-utils",
    "policycoreutils",
    "cronie",
    "fapolicyd",
    "s-nail",
    "chrony",
    "openssh-clients",
    "openssh-server",
    "sssd",
    "usbguard",
    "audispd-plugins",
    "audit"
  ],
  "services": {
    "enabled": [
      "auditd",
      "usbguard",
      "sssd",
      "sshd",
      "chronyd",
      "fapolicyd",
      "firewalld",
      "systemd-journald",
      "rsyslog",
      "pcscd"
    ],
    "masked": [
      "kdump",
      "autofs",
      "debug-shell"
    ]
  }
}
